@model IEnumerable<AviPriceUI.Models.Matrix>

@{
    ViewData["Title"] = "Index";
}

<h1>История</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUserSegmentNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUserSegmentNavigation.IdUserSegment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMatrix">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMatrix">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMatrix">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
