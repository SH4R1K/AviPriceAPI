@model AviPriceUI.Models.CellMatrix

@{
    ViewData["Title"] = "Добавление цены";
}

<h1>Добавление цены</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLocation" class="control-label"></label>
                <select asp-for="IdLocation" class ="form-control" asp-items="ViewBag.IdLocation"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdCategory" class="control-label"></label>
                <select asp-for="IdCategory" class ="form-control" asp-items="ViewBag.IdCategory"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdMatrix" class="control-label" hidden></label>
                <select asp-for="IdMatrix" class ="form-control" asp-items="ViewBag.IdMatrix" hidden></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <span class="text-danger">@Model.ErrorMessage</span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="IdMatrix">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
